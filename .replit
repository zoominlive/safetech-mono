modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["openssh"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/backend && PORT=8000 pnpm start"
waitForPort = 8000

[[workflows.workflow]]
name = "Install Puppeteer Chrome"
author = 42067624
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/backend && npx puppeteer browsers install chrome"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43505
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "pnpm --filter ./packages/backend start & pnpm --filter ./packages/frontend preview --host 0.0.0.0 --port 5000"]
build = ["pnpm", "build:fe"]
