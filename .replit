modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35805
externalPort = 3001

[[ports]]
localPort = 43505
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "pnpm --filter ./packages/backend start & pnpm --filter ./packages/frontend preview --host 0.0.0.0 --port 5000"]
build = ["pnpm", "build:fe"]
